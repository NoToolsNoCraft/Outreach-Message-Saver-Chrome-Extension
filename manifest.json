{
  "manifest_version": 3,
  "name": "Outreach Message Saver",
  "version": "1.0",
  "description": "Save and manage your LinkedIn outreach messages.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
